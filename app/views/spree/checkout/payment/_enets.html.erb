<%= image_tag "https://paymaya.com/business/assets/img/paymaya-checkout.png" %>

<p>
  Pay securely using your VISA and MasterCard credit, debit, or prepaid card.
</p>

<p>
  After completing the
  payment form you'll be back to the store.
</p>

<div class="text-right">
  <%= link_to enets_pay_path(pid: payment_method.id), method: :post, class: "btn btn-lg btn-success primary" do %>
    <i class="glyphicon glyphicon-credit-card"></i> Pay with eNETS
  <% end %>
</div>

<script type="text/javascript">
$(function() {
  var spreePaymentRadio = $("#checkout_form_payment input:radio")
  var hideCheckoutButtonForEnets = function() {
    if ($("#checkout_form_payment input:radio:checked").val() == <%= payment_method.id %>) {
      $("#checkout_form_payment .form-buttons").hide();
      $("p[data-hook='coupon_code']").hide();
    } else {
      $("#checkout_form_payment .form-buttons").show();
      $("p[data-hook='coupon_code']").show();
    }
  }
  spreePaymentRadio.change(function() {
    hideCheckoutButtonForEnets();
  });
  hideCheckoutButtonForEnets();
});
</script>
